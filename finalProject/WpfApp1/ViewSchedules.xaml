<Window x:Class="Finally.ViewSchedules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finally"
        mc:Ignorable="d"
        Title="View Schedules"  Height="450" Width="750" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Styles -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F1F1F1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF3E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Sort Section -->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
            <Button Background="Red" Content="Back" Width="100" Click="BackButton_Click"/>
            <ComboBox x:Name="TimeComboBox" Margin="10,0,0,0" SelectedIndex="0" SelectionChanged="TimeComboBox_SelectionChanged" Width="200"/>
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid x:Name="ScheduleDataGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="48,8,48,11">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Day of Week" Binding="{Binding DayOfWeeks}" Width="100"/>
                <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="50"/>
                <DataGridTextColumn Header="Class Name" Binding="{Binding ClassName}" Width="100"/>
                <DataGridTextColumn Header="Teacher Name" Binding="{Binding TeacherName}" Width="130"/>
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="130"/>
                <DataGridTextColumn Header="Time" Binding="{Binding TimeOfWeek}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
