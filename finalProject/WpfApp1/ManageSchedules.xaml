<Window x:Class="Finally.ManageSchedules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finally"
        mc:Ignorable="d"
        Title="ManageSchedules" Height="600" Width="750" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Styles -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F1F1F1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF3E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Sort Section -->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
            <Button Background="Red" Content="Back" Width="100" Click="BackButton_Click"/>
            <ComboBox x:Name="TimeComboBox" Margin="10,0,0,0" SelectedIndex="0" SelectionChanged="TimeComboBox_SelectionChanged" Width="200"/>
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid x:Name="SchedulesDataGrid" Grid.Row="1" AutoGenerateColumns="False" SelectionChanged="GradesDataGrid_SelectionChanged" Margin="48,8,48,11">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="DayOfWeeks" Binding="{Binding DayOfWeeks}" Width="150"/>
                <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="100"/>
                <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" Width="100"/>
                <DataGridTextColumn Header="Teacher ID" Binding="{Binding TeacherId}" Width="100"/>
                <DataGridTextColumn Header="Time" Binding="{Binding TimeOfWeek}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Detail Section -->
        <Grid Grid.Row="2" x:Name="ButtonForAdmin" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Schedules Details" FontWeight="Bold" Margin="0,0,0,10" Grid.ColumnSpan="2"/>

            <TextBlock Text="ID" Width="100" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="txtID" Width="200" IsReadOnly="True" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="DayOfWeeks" Width="100" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="txtDayOfWeeks" Width="200" Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Slot" Width="100" Grid.Row="3" Grid.Column="0"/>
            <TextBox x:Name="txtSlot" Width="200" Grid.Row="3" Grid.Column="1"/>

            <TextBlock Text="Class ID:" Width="100" Grid.Row="4" Grid.Column="0"/>
            <TextBox x:Name="txtClassID" IsReadOnly="True" Width="200" Grid.Row="4" Grid.Column="1"/>

            <TextBlock Text="Teacher ID:" Width="100" Grid.Row="5" Grid.Column="0"/>
            <TextBox x:Name="txtTeacherID" Width="200" Grid.Row="5" Grid.Column="1"/>

            <TextBlock Text="Time" Width="100" Grid.Row="6" Grid.Column="0"/>
            <DatePicker x:Name="dpTime" Margin="10" Width="200" Grid.Row="6" Grid.Column="1" ></DatePicker>

            <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
                <Button Content="Add" Width="100" Margin="5" Click="AddButton_Click"/>
                <Button Content="Edit" Width="100" Margin="5" Click="EditButton_Click"/>
                <Button Content="Delete" Width="100" Margin="5" Click="DeleteButton_Click"/>
                <Button Content="Clear" Width="100" Margin="5" Click="ClearButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
