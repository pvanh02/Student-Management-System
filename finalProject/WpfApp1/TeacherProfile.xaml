<Window x:Class="Finally.TeacherProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finally"
        mc:Ignorable="d"
        Title="Teacher Profile" Height="530" Width="400"
        Background="#E1F5FE" WindowStartupLocation="CenterScreen">
    <Grid Margin="20" Background="#E1F5FE">
        <Border BorderBrush="#03A9F4" BorderThickness="2" CornerRadius="10" Background="White">
            <StackPanel Margin="20">
                <TextBlock Foreground="OrangeRed" Text="Teacher Profile" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 10"/>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Full Name:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtFullName" Width="200" VerticalAlignment="Center" Margin="5"
                         Background="#E1F5FE" BorderBrush="#81D4FA" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Date of Birth:" Width="100" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpDateOfBirth" Width="200" VerticalAlignment="Center" Margin="5"
                            Background="#E1F5FE" BorderBrush="#81D4FA" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Gender:" Width="100" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="rbMale" Content="Male" GroupName="Gender" Margin="5"/>
                        <RadioButton x:Name="rbFemale" Content="Female" GroupName="Gender" Margin="5"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Phone Number:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPhoneNumber" Width="200" VerticalAlignment="Center" Margin="5"
                         Background="#E1F5FE" BorderBrush="#81D4FA" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Address:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtAddress" Width="200" VerticalAlignment="Center" Margin="5"
                         Background="#E1F5FE" BorderBrush="#81D4FA" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10">
                    <TextBlock Text="Subject:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSubject" Width="200" VerticalAlignment="Center" Margin="5"
                         Background="#E1F5FE" BorderBrush="#81D4FA" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
                    <Button Content="Save Changes" Width="100" Margin="10 0"
                        Background="#00C853" Foreground="White"
                        Click="SaveChanges_Click"/>
                    <Button Content="Back" Width="100" Margin="10 0"
                        Background="#D50000" Foreground="White"
                        Click="Back_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>